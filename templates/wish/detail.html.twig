{% extends 'base.html.twig' %}

{% block title %}Detail | {{ parent() }}{% endblock %}

{% block body %}
<main>
    <div class="grid gap-y-10 grid-rows-6 grid-flow-col border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

        {% if wish.image != null %}
        <div class="flex items-center justify-center pt-8">
        <img src="{{ asset(pictures_dir ~ '/' ~ wish.image) }}" alt="Image" width="500" height="600">
        </div>
        {% endif %}

        <div class="flex items-center justify-center pt-8">
            <h2 class="text-4xl font-extrabold dark:text-white">{{ wish.title }}</h2>
        </div>

        <div class="flex items-center justify-center pb-8">
            <p class="text-gray-500 dark:text-gray-400"><span class="italic">Created by {{ wish.author }} on {{ wish.dateCreated|date('d/m/Y') }}</span></p>
        </div>

        <div class="flex items-center justify-center pb-8">
            <ul class="max-w-md space-y-1 text-black list-disc list-inside dark:text-gray-400">
                <p class="text-gray-500 dark:text-gray-400"> Description : {{ wish.description }}</p>
            </ul>
        </div>
        <div class="flex items-center justify-center pb-8">
            <ul class="max-w-md space-y-1 text-black list-disc list-inside dark:text-gray-400">
                <p class="text-gray-500 dark:text-gray-400"> Category : {{ wish.category.label }}</p>
            </ul>
        </div>

        <div class="flex items-center justify-center pb-8">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_delete', {'id' : wish.id }) }}">
                <button type="button" class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-red-900 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Delete</button>
            </a>
            <a href="{{ path('app_edit', {'id' : wish.id }) }}">
                <button type="button" class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Modify</button>
            </a>
            {% endif %}
        </div>

    </div>

</main>


{% endblock %}
